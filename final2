// ========== UTIL: SHUFFLE ==========
function shuffle(array) {
  return array
    .map((a) => ({ sort: Math.random(), value: a }))
    .sort((a, b) => a.sort - b.sort)
    .map((a) => a.value);
}

// ========== LOGIN ==========
function handleLogin() {
  const user = document.getElementById("authUser").value.trim();
  const pass = document.getElementById("authPass").value.trim();
  if (!user || !pass) return showToast("Enter username & password");

  state.user = user;
  localStorage.setItem("iqUser", user);
  document.getElementById("authView").classList.add("hidden");
  document.getElementById("app").classList.remove("hidden");
  document.getElementById("userHello").innerText = `Hi, ${user}`;
  openCourses();
}

function handleRegister() {
  showToast("Account created! Now login.");
}

function logout() {
  state.user = null;
  localStorage.removeItem("iqUser");
  document.getElementById("app").classList.add("hidden");
  document.getElementById("authView").classList.remove("hidden");
}

// ========== NAVIGATION ==========
function openCourses() {
  hideAllViews();
  document.getElementById("coursesView").classList.remove("hidden");
  renderCourses();
}

function openProfile() {
  hideAllViews();
  document.getElementById("profileView").classList.remove("hidden");
  renderProfile();
}

function openQuizShortcut() {
  openCourses();
}

function hideAllViews() {
  ["coursesView","courseDetailView","quizView","reviewView","profileView"]
    .forEach((id) => document.getElementById(id).classList.add("hidden"));
}

// ========== COURSES ==========
const COURSES = {
  Maths: ["Algebra", "Geometry", "Calculus"],
  Science: ["Physics", "Chemistry", "Biology"],
  History: ["Ancient", "Medieval", "Modern"],
  Sports: ["Football", "Cricket", "Basketball"],
};

function renderCourses() {
  const grid = document.getElementById("courseNeonGrid");
  grid.innerHTML = "";
  Object.keys(COURSES).forEach((course) => {
    const btn = document.createElement("button");
    btn.className = "nbtn";
    btn.innerText = course;
    btn.onclick = () => openCourseDetail(course);
    grid.appendChild(btn);
  });
}

function openCourseDetail(course) {
  state.course = course;
  hideAllViews();
  document.getElementById("courseDetailView").classList.remove("hidden");
  document.getElementById("cdTitle").innerText = course;
  document.getElementById("cdPill").innerText = course;
  const grid = document.getElementById("topicGrid");
  grid.innerHTML = "";
  COURSES[course].forEach((topic) => {
    const btn = document.createElement("button");
    btn.className = "nbtn";
    btn.innerText = topic;
    btn.onclick = () => startQuiz(course, topic);
    grid.appendChild(btn);
  });
}

// ========== QUIZ ==========
function startQuiz(course, topic) {
  state.course = course;
  state.topic = topic;
  state.currentQ = 0;

  let qs = QUESTIONS[course]?.[topic] || [];
  if (!qs.length) return showToast("No questions found.");

  // 🔀 shuffle and limit to 10
  qs = shuffle(qs).slice(0, 10);

  state.questions = qs;
  hideAllViews();
  document.getElementById("quizView").classList.remove("hidden");
  document.getElementById("quizPill").innerText = course;
  document.getElementById("quizTitle").innerText = topic;
  document.getElementById("qTotal").innerText = qs.length;
  renderQuestion();
}

function renderQuestion() {
  const q = state.questions[state.currentQ];
  if (!q) return;

  document.getElementById("qBox").innerText = q.question;
  const aBox = document.getElementById("aBox");
  aBox.innerHTML = "";
  q.options.forEach((opt, i) => {
    const btn = document.createElement("button");
    btn.className = "btn btn-ghost";
    btn.innerText = opt;
    btn.onclick = () => selectAnswer(i);
    if (q.selected === i) btn.style.border = "2px solid var(--brand)";
    aBox.appendChild(btn);
  });
  document.getElementById("qBar").style.width =
    ((state.currentQ + 1) / state.questions.length) * 100 + "%";
}

function selectAnswer(i) {
  state.questions[state.currentQ].selected = i;
  renderQuestion();
}

function nextQ() {
  if (state.currentQ < state.questions.length - 1) {
    state.currentQ++;
    renderQuestion();
  } else {
    finishQuiz();
  }
}


function prevQ() {
  if (state.currentQ > 0) {
    state.currentQ--;
    renderQuestion();
  }
}

function confirmExit() {
  if (confirm("Exit quiz? Progress will be lost.")) openCourses();
}

// ========== FINISH QUIZ WITH IQ ==========
function finishQuiz() {
  hideAllViews();
  document.getElementById("reviewView").classList.remove("hidden");

  let correct = 0;
  const list = document.getElementById("revList");
  list.innerHTML = "";
  state.questions.forEach((q, idx) => {
    const li = document.createElement("div");
    li.style.marginBottom = "14px";
    const chosen = q.selected != null ? q.options[q.selected] : "No answer";
    const isCorrect = q.selected === q.answer;
    if (isCorrect) correct++;
    li.innerHTML = `
      <div><b>Q${idx + 1}:</b> ${q.question}</div>
      <div>Your answer: ${chosen}</div>
      <div>Correct: ${q.options[q.answer]}</div>
    `;
    list.appendChild(li);
  });

  // ✅ calculate IQ (scaled to 200)
  const iqScore = Math.round((correct / state.questions.length) * 200);

  // ✅ show IQ at the top of review
  const iqDiv = document.createElement("div");
  iqDiv.style.margin = "20px 0";
  iqDiv.style.fontSize = "20px";
  iqDiv.style.fontWeight = "900";
  iqDiv.style.color = "var(--brand)";
  iqDiv.innerText = `Your IQ Score: ${iqScore}`;
  list.prepend(iqDiv);

  // ✅ save to profile scoreboard
  state.scores.push({
    course: state.course,
    topic: state.topic,
    score: correct,
    total: state.questions.length,
    iq: iqScore,
  });
  saveScores();
}


// ========== PROFILE ==========
function renderProfile() {
  const my = document.getElementById("myScores");
  my.innerHTML = "";

  let total = state.scores.length;
  let avg = total ? Math.round(state.scores.reduce((a, s) => a + s.iq, 0) / total) : "-";

  document.getElementById("meAttempts").innerText = total;
  document.getElementById("meAvg").innerText = avg;

  state.scores.forEach((s) => {
    const li = document.createElement("li");
    li.innerText = `${s.course} • ${s.correct}/${s.total} • IQ ${s.iq}`;
    my.appendChild(li);
  });
}
function saveScores() {
  localStorage.setItem("iqScores", JSON.stringify(state.scores));
}

// ========== TOAST ==========
function showToast(msg) {
  const toast = document.getElementById("toast");
  toast.innerText = msg;
  toast.classList.remove("hidden");
  setTimeout(() => toast.classList.add("hidden"), 3000);
}

// ========== INIT ==========
(function init() {
  const savedUser = localStorage.getItem("iqUser");
  const savedScores = localStorage.getItem("iqScores");
  if (savedUser) {
    state.user = savedUser;
    document.getElementById("authView").classList.add("hidden");
    document.getElementById("app").classList.remove("hidden");
    document.getElementById("userHello").innerText = `Hi, ${savedUser}`;
    if (savedScores) state.scores = JSON.parse(savedScores);
    openCourses();
  }
})();

</script>
</body>
</html>
